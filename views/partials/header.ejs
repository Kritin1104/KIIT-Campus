<!DOCTYPE html>
<html>
    <head>
        <!-- Make site responsive on mobile/tablet -->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>KIIT Campus</title>
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <!-- always add custom css stylesheet after bootstrap  -->
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
<!-- =================================== -->
        <!-- new nav starts -->
        <nav class="navbar navbar-expand-md navbar-dark bg-success mb-4">
            <a class="navbar-brand" href="/"><i class="fas fa-university"> KIIT Campus</i></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>">
                    <a href="/campgrounds" class="nav-link">Home</a>
                </li>
              </ul>
              <ul class="navbar-nav">
                <% if(!currentUser){ %>
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %>">
                        <a href="/login" class="nav-link">Login</a>
                    </li>
                    <li class="nav-item <%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %>">
                        <a href="/register" class="nav-link">Sign Up</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a href="#" class="nav-link">Signed In As <%= currentUser.username %></a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link">Logout</a>
                    </li>
                <% } %>
            </ul>
            </div>
          </nav>
        <!-- new nav ends -->

        <div class="container">
            <%if(error && error.length>0){%>
                <div class="alert alert-danger" role="alert">
                    <%=error%>
                </div>
            <%}%>
            <%if(info && info.length>0){%>
                <div class="alert alert-info" role="alert">
                    <%=info%>
                </div>
            <%}%>
            <%if(success && success.length>0){%>
                <div class="alert alert-success" role="alert">
                    <%=success%>
                </div>
            <%}%>
        </div>

