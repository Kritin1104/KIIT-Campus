<%- include("../partials/header.ejs") %>


    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to KIIT Campus</h1>
            <p>Get to know the campuses</p>
            <p>
                <a class="btn btn-success btn-lg" href="/campgrounds/new">ADD NEW CAMPUS</a>
            </p>
        </div>
    </header>

    <div class="row text-center">
        <% for(var i=0;i<campgrounds.length;i++) { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
 
                <!-- bs 4 card component -->
                <div class="card">
                    <img src="<%= campgrounds[i].image %>" class="card-img-top" alt="<%=campgrounds[i].name%>">
                    <div class="card-body">
                      <h5 class="card-title"><%=campgrounds[i].name%></h5>
                      <p class="card-text"><%=campgrounds[i].description.substring(0,50)%></p>
                      <a href="/campgrounds/<%=campgrounds[i]._id%>" class="btn btn-success">More Info</a>
                    </div>
                </div>
                <!-- bs 4 card ends -->

            </div>
        <% } %>
    </div>



    
<%- include("../partials/footer.ejs") %>