<!-- contains the form to edit a new COMMENT-->

<%- include("../partials/header.ejs") %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit Comment</h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-block btn-success">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back to 'View All Campuses' page</a>
        </div>
    </div>



<%- include("../partials/footer.ejs") %>
